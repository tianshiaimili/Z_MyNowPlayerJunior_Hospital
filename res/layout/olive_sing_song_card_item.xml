<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:id="@+id/fl_carditem_container"
    android:layerType="software">

    <RelativeLayout android:id="@+id/rl_cardItem_rl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/roundcorner_shadow"
        android:paddingBottom="6dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp" >

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="256dp"
            android:background="@drawable/roundcorner_white"
            android:padding="3dp" >

            <com.pccw.nowplayerjunior.utils.RoundedImageView
                android:id="@+id/riv_olivesingsongitem_img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/rl_cardItem_rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/roundcorner_shadow"
        android:paddingBottom="6dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp" >

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="256dp"
            android:background="@drawable/roundcorner_white"
            android:padding="3dp" >

            <com.pccw.nowplayerjunior.utils.RoundedImageView
                android:id="@+id/riv_olivesingsongitem_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>